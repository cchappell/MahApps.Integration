<Controls:MetroWindow x:Class="Samples.CaliburnMicroIntegration.ShellView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:local="clr-namespace:Samples.CaliburnMicroIntegration"
                      Title="MainWindow"
                      Height="550"
                      Width="800">
    <Controls:MetroContentControl Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Controls:MetroAnimatedSingleRowTabControl x:Name="Demos" ItemTemplate="{StaticResource DisplayNameHeaderTemplate}"
                        ContentTemplate="{StaticResource TabContentControlTemplate}">

            </Controls:MetroAnimatedSingleRowTabControl>
        </Grid>
    </Controls:MetroContentControl>
</Controls:MetroWindow>
